<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<div class="row">
  <% @letters.each do |letter| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="card-text text-center"><%= letter %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="mt-5">
  <h4>What is the longest word you can find?</h4>
  <form class="form-inline" action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="form-group">
      <input type="text" class="form-control" name="guess"></form>
      <input type="submit" class="btn btn-primary"></form>
    </div>
  </form>
</div>
